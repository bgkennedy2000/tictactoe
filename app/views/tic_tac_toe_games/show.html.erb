<h1>A Game of Tick Tack Toe</h1>
<% if @game.game_over? %> 
  <h2>GAME OVER! <%= @game.winner.username %> won! </h2>
<% end %>
<h3>X player: <%= @game.x_user.username %></h3>
<h3>O player: <%= @game.y_user.username %></h3>
<% if @game.continue? && session[:user_id] != @game.user_turn.id %> 
  <h3>It's <%= @game.user_turn.username %>'s turn.  Come back once they've played.</h3>
<% end %>
<% if @game.continue? && session[:user_id] == @game.user_turn.id %> 
  <h3>It's your turn!</h3>
<% end %>
<p>
  <table>
    <tbody>
    <tr>
      <td>
        <%= board_move(@game, @moves, 1, 1) %>
      </td> 
      <td>
        <%= board_move(@game, @moves, 2, 1) %>
      </td>
      <td>
        <%= board_move(@game, @moves, 3, 1) %>
      </td>
    </tr>
    <tr>
      <td>
        <%= board_move(@game, @moves, 1, 2) %>
      </td> 
      <td>
        <%= board_move(@game, @moves, 2, 2) %>
      </td>
      <td>
        <%= board_move(@game, @moves, 3, 2) %>
      </td>
    </tr>
    <tr>
      <td>
        <%= board_move(@game, @moves, 1, 3) %>
      </td> 
      <td>
        <%= board_move(@game, @moves, 2, 3) %>
      </td>
      <td>
        <%= board_move(@game, @moves, 3, 3) %>
      </td>
    </tr>
  </tbody>
  </table>
</p>
